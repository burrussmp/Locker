{
    "env": {
        "node": true,
        "es2021": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "plugin:import/errors"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "max-len": ["error", 140, 2, {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": false,
        "ignoreTemplateLiterals": false
      }]
    },
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    }
}
